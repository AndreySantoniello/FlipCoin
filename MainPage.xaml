<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlipCoin.MainPage">

    <ScrollView>
        <FlexLayout AlignItems="Center" JustifyContent="Center">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <Image x:Name="coin" Source="cara.jpg" WidthRequest="200" HeightRequest="200"/>

                <Label x:Name="result"/>

                <Picker
                    Title="Selecione a face da moeda."
                    x:Name="picker">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Cara</x:String>
                            <x:String>Coroa</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Button Text="JOGAR" Clicked="Button_Clicked" />

            </VerticalStackLayout>
        </FlexLayout>

    </ScrollView>

</ContentPage>
